PH_SC
{

	fullyCoupledBody
	{
		velocity (0 0 0);
	}
	
    // staticBody;

	rho         rho [1 -3 0 0 0 0 0] 2500;

	refineMC 5;

	U
	{
	BC  noSlip;
	}

	bodyAddition
	{
		addModel onceScatter;
		onceScatterCoeffs
		{
			addMode fieldBased;
			fieldBasedCoeffs
			{
				fieldName lambda;
				fieldValue 0.3;
			}
			addDomain boundBox;
			boundBoxCoeffs
			{
				minBound (-0.04 0.005 -0.04);
				maxBound (0.04 0.1 0.04);
			}
			
			scalingMode    noScaling;
			noScalingCoeffs{}
			
			rotationMode   randomRotation;
			randomRotationCoeffs{}
		}
	}	
    material particle;
	bodyGeom convex;
	updateTorque true;
	sdBasedLambda false;
	interfaceSpan 1.0;
	startSynced false;
	refineBuffers 0;
	timesToSetStatic -1;
}

